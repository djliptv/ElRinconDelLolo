<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.ERDLMaintenance"
       name="El Rincon Del Lolo Auto Maintenance"
       version="0.0.1"
       provider-name="LOLO">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
 	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video executable</provides>
	</extension> 
  <extension point="xbmc.service" library="service.py" start="startup" />
  
	<extension point="xbmc.addon.repository" name="El Rincon De Lolo">
        <info>https://raw.githubusercontent.com/djliptv/ElRinconDelLolo/master/RepoERDL/Repositorio/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/djliptv/ElRinconDelLolo/master/RepoERDL/Repositorio/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/djliptv/ElRinconDelLolo/master/RepoERDL/Repositorio/</datadir>
    </extension>  
  
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Maintenance</summary>
    <description>Your one stop tool for clearing your device.</description>
    <language></language>
    <license></license>
    <source></source>
    <forum></forum>
    <website></website>
  </extension>
</addon>
